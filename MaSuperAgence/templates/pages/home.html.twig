{% extends "base.html.twig" %}

{% block title 'BLUFA Lacation Maison' %}
{% block body %}
    <div class="jumbotron text-center">
        <h1>BLUFA Lacation Maison</h1>
        <p>BLUFA est une entreprise qui oeuvre pour les gens pauvres</p>
    </div>
    <div class="container">
        <h1>Les derniers biens</h1>
        <div class="row flex">
            {% for property in proprietes %}
                <div class="col-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="{{path('property.show', {id: property.id, slug: property.slug})}}">{{property.titre}}</a>
                        </h5>
                        <p class"card-text">{{property.ville}} ({{property.codepostal}})</p>
                            <div class="text-primary" style="font-weight: bold; font-size: 2rem;">{{property.getFormatePrix}} FCFA</div>
                        </div>
                    </div>
                </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}